<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Note</th>
      <th>Assignment</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.note %></td>
        <td><%= post.assignment %></td>
        <td><%= post.due_date %></td>
        <td><%= link_to 'Show', post %></td>
        <% if post.user == current_user %>
	        <td><%= link_to 'Edit', edit_post_path(post) %></td>
	        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	        </td>
	    <% end %>    
      </tr>
    <% end %>
  </tbody>
</table>


